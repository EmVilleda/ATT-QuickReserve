<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:divider="@drawable/divider"
    android:showDividers="middle"
    android:clickable="false"
    tools:context = "quickreserve.app.MyReservationActivity"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="14"
        android:orientation="horizontal"
        android:focusable="true"
        android:clickable="false">

        <TextView
            android:id="@+id/myReservationRowSeat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="A50"
            android:textAppearance="@style/SeatNameTextView"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:clickable="false"
            android:layout_marginTop="5dp">

        </TextView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.78"
            android:clickable="false"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/myReservationRowDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Month Day Year"
                android:textAppearance="@style/TimeTextView"
                android:layout_gravity="top"
                android:clickable="false">
            </TextView>

            <TextView
                android:id="@+id/myReservationRowTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start:time - end:time"
                android:textAppearance="@style/TimeTextView"
                android:layout_gravity="bottom"
                android:clickable="false">

            </TextView>

        </LinearLayout>

    </LinearLayout>



    <ImageButton
        android:id="@+id/myEditReservationIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_action_view"
        android:layout_weight="1"
        android:clickable="false"
        android:layout_gravity="center"
        android:padding="2dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/icon_button"
        android:scaleType="fitCenter"
        />



</LinearLayout>