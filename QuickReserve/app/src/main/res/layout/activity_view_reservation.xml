<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#fff"
        tools:context="quickreserve.app.ViewReservationActivity"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/destinationImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/workspaceDesc"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:src="@drawable/workspace_1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/destinationImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/border"
            android:alpha="1"
            android:clickable="true">

            <TextView style = "@style/ReservationTextView"
                android:id="@+id/viewReservationSeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Seat"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp" />

            <TextView style = "@style/ReservationTextView"
                android:id="@+id/viewReservationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Date"
                android:layout_below="@+id/viewReservationSeat"
                android:layout_alignLeft="@+id/viewReservationSeat"
                android:layout_alignStart="@+id/viewReservationSeat"
                android:layout_marginBottom="8dp" />
            <TextView style = "@style/ReservationTextView"
                android:id="@+id/viewReservationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Time"
                android:layout_below="@+id/viewReservationDate"
                android:layout_alignLeft="@+id/viewReservationDate"
                android:layout_alignStart="@+id/viewReservationDate"
                android:layout_marginBottom="8dp" />

            <TextView style = "@style/ReservationTextView"
                android:id="@+id/viewReservationPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Phone Number"
                android:layout_below="@+id/viewReservationTime"
                android:layout_alignLeft="@+id/viewReservationTime"
                android:layout_alignStart="@+id/viewReservationTime"
                android:layout_marginBottom="8dp" />

            <TextView style = "@style/ReservationTextView"
                android:id="@+id/viewReservationPrinter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Printer Number"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/viewReservationPhone"
                android:layout_alignStart="@+id/viewReservationPhone"
                android:layout_below="@+id/viewReservationPhone"
                android:layout_marginBottom="8dp" />

            <Button style = "@style/MyButton"
                android:id="@+id/viewReservationEditButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editReservation"
                android:padding="5dp"
                android:textColor="@color/white"
                android:clickable="true"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/viewReservationPrinter"
                android:layout_alignStart="@+id/viewReservationPrinter" />

            <Button style = "@style/MyButton"
                android:id="@+id/viewReservationDeleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deleteReservation"
                android:padding="5dp"
                android:textColor="@color/white"
                android:clickable="true"
                android:layout_alignBottom="@+id/viewReservationEditButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/viewReservationEditButton" />



        </RelativeLayout>


    </RelativeLayout>

    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode = "none"
        android:divider="@color/gray"
        android:dividerHeight="1dp"
        android:background="@color/white"
        />

</android.support.v4.widget.DrawerLayout>







